{
    "name": "Skip the BS",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Removes unnecessary blog-like posts on cooking websites",
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["*://damndelicious.net/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Skip the BS"
    }
}